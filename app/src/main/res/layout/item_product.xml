<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/size_8"
        app:cardElevation="@dimen/size_2"
        app:cardUseCompatPadding="true"
        app:contentPaddingLeft="@dimen/size_8"
        app:contentPaddingRight="@dimen/size_8"
        app:contentPaddingTop="@dimen/size_8"
        app:contentPaddingBottom="@dimen/size_16"
        >

        <include layout="@layout/item_product_content" />

    </android.support.v7.widget.CardView>
</FrameLayout>
