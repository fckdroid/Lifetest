<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/size_16"
    tools:context="dev.suhockii.lifetest.ui.main.MainActivity"
    tools:showIn="@layout/fragment_details">

    <ImageView
        android:id="@+id/details_iv_product"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:contentDescription="@string/product_image"
        android:transitionName="@string/product_image_transition"
        tools:srcCompat="@mipmap/ic_launcher"
        tools:targetApi="lollipop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginEnd="@dimen/size_56"
        android:layout_marginStart="@dimen/size_56"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_tv_name"
            style="@style/DefaultText"
            tools:text="Apples" />

        <TextView
            android:id="@+id/details_tv_price"
            style="@style/DefaultText"
            tools:text="Price" />

        <TextView
            android:id="@+id/details_tv_description"
            style="@style/DescriptionText"
            tools:text="Description" />
    </LinearLayout>


</LinearLayout>
